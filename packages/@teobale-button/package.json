{
  "name": "@teobale/button",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --external react && cp src/types.d.ts dist/index.d.ts",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@teobale/eslint-config": "*",
    "@teobale/tsconfig": "*",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "tsup": "7.2.0",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=17 <19",
    "react-dom": ">=17 <19"
  }
}
