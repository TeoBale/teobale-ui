{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build --no-cache",
    "dev": "turbo dev --no-cache --parallel --continue",
    "lint": "turbo lint",
    "storybook": "cd apps/docs && yarn storybook",
    "build-storybook": "cd apps/docs && yarn build-storybook",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@teobale/eslint-config": "*",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "latest"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "packageManager": "yarn@1.22.21"
}
